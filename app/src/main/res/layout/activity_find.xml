<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/heightCont"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".find.FindActivity"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/titleBlock"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/backFindToMain"
            android:src="@drawable/left"

            style="@style/ComeBackIcon"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/find"
            style="@style/TitleActivity"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/editContainer"
        app:layout_constraintTop_toBottomOf="@id/titleBlock"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/titleFind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/size_16"
        android:background="@xml/shape"
        android:backgroundTint="@color/smoke_gray"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/find_local"
            android:layout_gravity="center"
            android:paddingStart="@dimen/size_9"

            />

        <EditText
            android:id="@+id/searchField"
            android:hint="@string/find_string"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:textCursorDrawable="@xml/color_cursor"
            android:paddingHorizontal="@dimen/size_8"
            style="@style/SearchBar"
             />

        <ImageView
            android:id="@+id/clearIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingHorizontal="5dp"
            android:paddingStart="@dimen/size_16"

            android:background="@color/smoke_gray"
            android:src="@drawable/baseline_close_24"
            android:visibility="gone"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/placeholder_200"
        app:layout_constraintTop_toBottomOf="@id/editContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="102dp"
        android:visibility="gone">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:foregroundGravity="center"
            android:src="@drawable/error_find_200"
            android:layout_marginBottom="@dimen/size_16"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/what_go_wrong"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/text_size_20"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/placeholder_500"
        app:layout_constraintTop_toBottomOf="@id/editContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="102dp"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:foregroundGravity="center"
            android:src="@drawable/error_500"
            android:layout_marginBottom="@dimen/size_16"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/problem_connect"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/text_size_20"
            android:textStyle="bold"
            android:layout_marginBottom="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/problem_connect_topic"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="@dimen/text_size_20"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>
        <Button
            android:id="@+id/updateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/update"
            android:layout_gravity="center"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/topRecyclerBarr"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/editContainer"
        app:layout_constraintBottom_toTopOf="@id/titleFind"
        app:constraint_referenced_ids="editContainer"
        app:barrierDirection="bottom"
        />

    <TextView
        android:id="@+id/titleFind"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/titleFind"
        app:layout_constraintTop_toBottomOf="@id/topRecyclerBarr"
        app:layout_constraintStart_toStartOf="@id/heightCont"
        app:layout_constraintEnd_toEndOf="@id/heightCont"
        android:gravity="center"
        android:fontFamily="@font/ys_display_medium"
        android:textSize="@dimen/text_size_19"
        android:layout_marginBottom="@dimen/size_16"
        android:layout_marginTop="@dimen/size_8"
        android:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/findList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/size_16"
        android:orientation="vertical"
        android:scrollbars="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/clearFind"
        app:layout_constraintEnd_toEndOf="@id/heightCont"
        app:layout_constraintStart_toStartOf="@id/heightCont"
        app:layout_constraintTop_toBottomOf="@id/titleFind" />

    <Button
        android:id="@+id/clearFind"
        android:layout_marginBottom="@dimen/size_24"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:text="@string/clearFindHistory"
        android:fontFamily="@font/ys_display_medium"
        android:textSize="@dimen/text_size_16"
        android:layout_marginVertical="@dimen/size_16"
        app:layout_constraintBottom_toTopOf="@id/footerFind"
        app:layout_constraintStart_toStartOf="@id/footerFind"
        app:layout_constraintEnd_toEndOf="@id/footerFind"
        android:visibility="gone"/>

    <androidx.constraintlayout.widget.Barrier
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/footerFind"
        app:barrierDirection="top"
        app:constraint_referenced_ids="footerFind"
        />

    <LinearLayout
        android:id="@+id/footerFind"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">
        <Button
            android:id="@+id/findComeButton"
            app:icon="@drawable/find"
            android:text="Поиск"
            android:layout_weight="1"
            app:iconTint="@color/blue_yp"
            android:textColor="@color/blue_yp"
            style="@style/ButtonMidleStyle"/>
        <Button
            android:id="@+id/mediaComeButton"
            app:icon="@drawable/mediateka"
            android:text="Медиатека"
            android:layout_weight="1"
            style="@style/ButtonMidleStyle"/>
        <Button
            android:id="@+id/setComeButton"
            app:icon="@drawable/setting"
            android:text="Настройка"
            android:layout_weight="1"
            style="@style/ButtonMidleStyle"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
