<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp"
        >
        <Button
            android:id="@+id/back"
            android:layout_width="@dimen/button_48_size"
            android:layout_height="@dimen/button_48_size"
            android:backgroundTint="@color/white"
            app:icon = "@drawable/left"
            app:iconSize = "26dp"
            app:iconTint = "@color/deepest_blue"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding ="12dp"
            android:foreground="?attr/selectableItemBackground"
        />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:textSize="@dimen/app_font_size"
            android:textStyle="bold"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:paddingStart="12dp"
            android:paddingEnd="86dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/dark_theme"
            android:textSize="16dp"
            android:textStyle="normal"
            android:paddingVertical="21dp"
            android:paddingStart="16dp"/>

        <ImageView
            android:layout_width="48dp"
            android:layout_height="40dp"
            android:src="@drawable/control"
            android:paddingHorizontal="9dp"
            android:layout_gravity="center"
            android:layout_marginEnd="6dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Share_App"
            android:textSize="16dp"
            android:textStyle="normal"
            android:paddingVertical="21dp"
            android:paddingStart="16dp"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="45dp"
            android:src="@drawable/share_24"
            android:paddingHorizontal="3dp"
            android:layout_gravity="center"
            android:layout_marginEnd="6dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/support"
            android:textSize="16dp"
            android:textStyle="normal"
            android:paddingVertical="21dp"
            android:paddingStart="16dp"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="45dp"
            android:src="@drawable/support"
            android:paddingHorizontal="3dp"
            android:layout_gravity="center"
            android:layout_marginEnd="6dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/terms"
            android:textSize="16dp"
            android:textStyle="normal"
            android:paddingVertical="21dp"
            android:paddingStart="16dp"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="45dp"
            android:src="@drawable/rigth"
            android:paddingHorizontal="3dp"
            android:layout_gravity="center"
            android:layout_marginEnd="6dp"
            />
    </LinearLayout>

</LinearLayout>
