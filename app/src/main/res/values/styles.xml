<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--<style name="SearchBar" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">-->
    <style name="SearchBar" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/smoke_gray</item>
        <item name="cornerRadius">@dimen/padding_horiz_main</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:padding">@dimen/size_7</item>
        <item name="android:textColor">@color/deep_gray</item>
        <item name="android:textColorHint">@color/deep_gray</item>
        <!--<item name="android:layout_marginHorizontal">@dimen/size_16</item>-->
        <item name="android:layout_marginVertical">@dimen/size_8</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="MessageTextStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/deepest_blue</item>
        <item name="android:textSize">@dimen/app_font_size</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="TitleActivity">
        <item name="android:textSize">@dimen/app_font_size</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingBottom">@dimen/size_12</item>
        <item name="android:paddingTop">@dimen/size_12</item>
        <item name="android:paddingStart">@dimen/size_12</item>
        <item name="android:paddingEnd">@dimen/size_86</item>
    </style>
    <style name="SubMenuActivity">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingVertical">@dimen/size_21</item>
        <item name="android:paddingStart">@dimen/padding_horiz_main</item>
    </style>
    <style name="ComeBackIcon">
        <item name="android:layout_width">@dimen/button_48_size</item>
        <item name="android:layout_height">@dimen/button_48_size</item>
        <item name="android:padding">@dimen/size_12</item>
        <item name="android:layout_gravity">center</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>
    <style name="FunctionIcon">
        <item name="android:layout_width">@dimen/size_35</item>
        <item name="android:layout_height">@dimen/size_45</item>
        <item name="android:paddingHorizontal">@dimen/size_3</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginEnd">@dimen/size_6</item>
    </style>
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/size_24</item>
        <item name="android:paddingRight">@dimen/size_24</item>
        <item name="android:paddingBottom">@dimen/padding_horiz_main</item>
        <item name="android:paddingTop">@dimen/padding_horiz_main</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/size_8</item>
        <item name="cornerRadius">@dimen/size_8</item>
        <item name="iconTint">@color/black</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="ButtonMidleStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">?attr/colorAccent</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconTint">?attr/colorPrimary</item>
        <item name="iconSize">@dimen/size_24</item>
        <item name="iconGravity">textTop</item>
        <item name="android:padding">@dimen/size_8</item>

    </style>
    <style name="ButtonMainStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/padding_horiz_main</item>
        <item name="android:layout_marginBottom">@dimen/size_6</item>
        <item name="android:textSize">@dimen/app_font_size</item>
        <item name="android:textColor">@color/deepest_blue</item>
        <item name="iconSize">@dimen/size_26</item>
        <item name="iconTint">@color/deepest_blue</item>
        <item name="iconGravity">textStart</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <dimen name="size_16">16dp</dimen>
    <dimen name="size_7">7dp</dimen>
</resources>
